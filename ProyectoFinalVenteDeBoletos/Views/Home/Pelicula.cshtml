@using ProyectoFinalVentaDeBoletos.Models.ViewModels
@model PeliculaViewModel
@{
    Layout = "_MainLayout";
}

<link rel="stylesheet" href="~/Peliculas/estilos.css">

<section class="pelicula-info">

    <div class="poster">
        <img src="~/images/@(Model.Pelicula.Id).jpg" alt="@Model.Pelicula.Nombre">
    </div>
    
    <div class="descripcion">
        <h1>@Model.Pelicula.Nombre</h1><br>
        <p>@Model.Pelicula.Informacion</p><br><br>
        <p>@Model.Pelicula.Sinapsis</p>
        <br>
        <p>Selecciona el horario disponible</p>
        <select id="horarios">
            @foreach (var h in Model.Horarios)
            {
                <option value="@h.Id">@h.HorarioDisponible</option>
            }
        </select>
        <br />
        <input type="submit" class="comprar-btn" value="Comprar Boletos" />
    </div>
</section>

<section class="otras-peliculas">
    <h2>Otras Películas</h2>
    <div class="peliculas-container">
        @if (Model.OtrasPeliculas.Any())
        {
            @foreach (var op in Model.OtrasPeliculas)
            {
                <div class="pelicula" href="~/Pelicula/@(op.Nombre.Replace(' ','-'))">
                    <img src="~/images/@(op.Id).jpg" alt="@op.Nombre">
                    <h3>@op.Nombre</h3>
                    <p>Año</p>
                </div>
            }
        }
        else
        {
            <h1>No hay otras peliculas, vuelva más tarde</h1>
        }
    </div>
</section>