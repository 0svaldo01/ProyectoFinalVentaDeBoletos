@model ProyectoFinalVentaDeBoletos.Areas.Admin.Models.Horarios.EliminarHorarioViewModel;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="~/Estilos/styleHorarios.css">
<form class="contenedor-eliminar-horario" action="~/Admin/Horario/Eliminar/@Model.Id" method="post">
    <h2>Eliminar Horario</h2>

    <label>¿Desea eliminar el horario @(Model.Horario)?</label>
    <div class="botones-eliminar-horario">
        <button type="submit">Aceptar</button>
        <a href="~/Admin/Horarios">
            <input type="button" value="Cancelar">
        </a>
    </div>
</form>